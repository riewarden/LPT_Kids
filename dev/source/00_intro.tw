/* This handles the redirection, by putting the search query into varDestination */
<<script>> 
 window.grabQuery = function getParameter(parameterName){
    let parameters = new URLSearchParams(window.location.search);
    return parameters.get(parameterName);
    };
//for debugging grabQuery: window.alert(grabQuery("location"));
State.variables.varDestination = grabQuery("location");
<</script>>
