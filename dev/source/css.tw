#passages {
	padding: 5em 2em 2em;
}


.passage a {
box-shadow: 0px 22px 14px -7px #b3b3b3;
margin-top: 1em;
	background: rgb(210,50,141);
background: linear-gradient(0deg, rgba(210,50,141,1) 51%, rgba(230,108,78,1) 86%, rgba(255,180,0,1) 100%);


	background-color:#000000;
	border-radius:3px;
	display:inline-block;
	cursor:pointer;
	color:#ffffff;
	font-size: 1.2em;
	font-weight:bold;
	padding:2em 1em;
	width: 90%;
	text-decoration:none;
	text-align: center;
}


.altlinks a {
	background: linear-gradient(to bottom, #00b4b4 5%, #000000 100%);
	padding:1em 1em;
	width: 90%;
	text-decoration:none;
	text-align: left;
}

img {
  border: 2px solid #000;
  text-align: center;
  
}

#ui-dialog-titlebar {
 background-color:#FFF;
 min-height:24px
}
#menu li a:hover {
 background-color:#FFB400;
 border-color:#eee
}

#ui-dialog-body {
 background-color:#FFF;
 border:1px solid #444;
 text-align:left;
 line-height:1.5;
 padding:1em
}

#ui-dialog-close:hover {
 
 border-color:#FFF;
}


#StorySubtitle {
font-size: small;
} 


